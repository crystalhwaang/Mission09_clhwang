@{
}

@model IEnumerable<string>

<!--Creating a route for each of the categorical buttons-->
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookstoreType="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>
</div>

@foreach (string t in Model)
{
    <li asp-controller="Home" asp-action="Index" asp-route-bookstoreType="@t" asp-route-pageNum="1"
        class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary")">@t</li>
    <br />
}